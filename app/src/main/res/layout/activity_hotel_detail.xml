<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.bookmystay.ui.HotelDetailViewModel" />

        <variable
            name="hotel"
            type="com.bookmystay.data.model.Hotel" />

        <variable
            name="commentsAdapter"
            type="com.bookmystay.ui.CommentsAdapter" />

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/hotelName"
                    style="@style/HotelDetailItems"
                    android:text="@{hotel.name}" />

                <TextView
                    android:id="@+id/description"
                    style="@style/HotelDetailItems"
                    android:text="@{hotel.description}" />

                <TextView
                    android:id="@+id/cost"
                    style="@style/HotelDetailItems"
                    android:text="@{hotel.cost}" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCommentsList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                app:adapter="@{commentsAdapter}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</layout>